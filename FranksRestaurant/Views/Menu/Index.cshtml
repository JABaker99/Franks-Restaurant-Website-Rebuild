@{
    ViewData["Title"] = "Menu - Frank's Restaurant";
    ViewData["Description"] = "Explore our delicious menu items, including signature pizzas, crispy fried dishes, and more!";
    ViewData["ShowMenuButton"] = "false";

    var currentSortField = (ViewData["SortField"] as string) ?? "Name";
    var currentSortDir = (ViewData["SortDir"] as string) ?? "asc";
    MenuType? currentSortGroup = ViewData["SortGroup"] != null ? (MenuType?)ViewData["SortGroup"] : null;
}

@Html.Partial("_Hero")

@model List<IGrouping<MenuType, MenuItem>>

@foreach (var group in Model)
{
    <h2>@group.Key</h2>

    <table class="table">
        <thead>
        <tr>
            <th>
                @{
                    var nameToggle = (currentSortField == "Name" && currentSortGroup == group.Key)
                        ? (currentSortDir == "asc" ? "desc" : "asc")
                        : "asc";
                }
                <a href="@Url.Action("Index", "Menu", new { sortField = "Name", sortDir = nameToggle, sortGroup = group.Key })">Name</a>
            </th>
            <th>Description</th>
            <th>
                @{
                    var costToggle = (currentSortField == "Cost" && currentSortGroup == group.Key)
                        ? (currentSortDir == "asc" ? "desc" : "asc")
                        : "asc";
                }
                <a href="@Url.Action("Index", "Menu", new { sortField = "Cost", sortDir = costToggle, sortGroup = group.Key })">Cost</a>
            </th>
            @if (ViewBag.IsAdmin == true)
            {
                <th>Actions</th>
                <th></th>
            }
        </tr>
        </thead>
        <tbody>
        @{
            IEnumerable<MenuItem> orderedItems;
            if (currentSortGroup.HasValue && currentSortGroup.Value == group.Key)
            {
                if (currentSortField == "Cost")
                {
                    orderedItems = currentSortDir == "asc"
                        ? group.OrderBy(x => x.Cost)
                        : group.OrderByDescending(x => x.Cost);
                }
                else
                {
                    orderedItems = currentSortDir == "asc"
                        ? group.OrderBy(x => x.Name)
                        : group.OrderByDescending(x => x.Name);
                }
            }
            else
            {
                orderedItems = group.OrderBy(x => x.Name);
            }
        }
        @foreach (var item in orderedItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Cost</td>
                <td>
                    @if (ViewBag.IsAdmin == true)
                    {
                        <a href="@Url.Action("AddAndEdit", "Menu", new { id = item.Id })" class="btn btn-warning">Edit</a>
                    }
                </td>
                <td>
                    @if (ViewBag.IsAdmin == true)
                    {
                        <form action="@Url.Action("Delete", "Menu", new { id = item.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
@if (ViewBag.IsAdmin == true)
{
    <div class="d-flex justify-content-center mt-4">
        <a href="@Url.Action("AddAndEdit", "Menu")" class="btn btn-success mx-2">Add New Menu Item</a>
        <form action="@Url.Action("Logout", "Admin")" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger mx-2">Logout</button>
        </form>
    </div>
}
else
{
    <div class="d-flex justify-content-center mt-4">
        <a href="@Url.Action("Login", "Admin")" class="btn btn-outline-dark mx-2">Admin Login</a>
    </div>
}