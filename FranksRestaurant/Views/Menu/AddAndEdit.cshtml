@model MenuItem

<h1>@(Model.Id == 0 ? "Add" : "Edit") Menu Item</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Cost">Cost</label>
        <input type="number" class="form-control" id="Cost" name="Cost" value="@Model.Cost" required />
    </div>

    <div class="form-group">
        <label for="MenuType">Menu Type</label>
        <select class="form-control" name="MenuType" id="MenuType" required>
            @foreach (var type in ViewBag.MenuTypes as List<MenuType>)
            {
                <option value="@type" selected="@(Model.MenuType == type ? "selected" : null)">@type</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">@((Model.Id == 0) ? "Add" : "Update") Menu Item</button>
    <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">Cancel</a>
</form>