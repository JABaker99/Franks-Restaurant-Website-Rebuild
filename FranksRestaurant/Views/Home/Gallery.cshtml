@{
    ViewData["Title"] = "Gallery - Frank's Restaurant";
    ViewData["Description"] = "Explore our gallery to see the delicious dishes and cozy atmosphere at Frank's.";
}

@Html.Partial("_Hero")

<div class="gallery-container">
    <div class="gallery-item">
        <img src="~/images/Franks-3-Dinners-Tray.jpg" alt="3 Dinners Tray" />
        <div class="overlay">
            <div class="text">
                <h3>3 Dinners Tray</h3>
                <p>Enjoy a hearty meal with three delicious trays, each with unique flavors!</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Bar-Entrance.jpg" alt="Bar Entrance" />
        <div class="overlay">
            <div class="text">
                <h3>Bar Entrance</h3>
                <p>Step into Frank's lively bar area, where good times and great drinks await!</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Brown-Delight-Caramel.jpg" alt="Brown Delight Caramel" />
        <div class="overlay">
            <div class="text">
                <h3>Brown Delight Caramel</h3>
                <p>Indulge in the sweet, rich flavors of our caramel dessert.</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Fried-Food.jpg" alt="Fried Food" />
        <div class="overlay">
            <div class="text">
                <h3>Fried Food</h3>
                <p>A crispy collection of our favorite fried delicacies.</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Outside-Sign.jpg" alt="Outside Sign" />
        <div class="overlay">
            <div class="text">
                <h3>Outside Sign</h3>
                <p>Welcome to Frank's, where comfort food meets great ambiance!</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Pizza.jpg" alt="Pizza" />
        <div class="overlay">
            <div class="text">
                <h3>Pizza</h3>
                <p>Our signature pizza, with fresh ingredients and the perfect crust.</p>
            </div>
        </div>
    </div>

    <div class="gallery-item">
        <img src="~/images/Franks-Sports-Bar.jpg" alt="Sports Bar" />
        <div class="overlay">
            <div class="text">
                <h3>Sports Bar</h3>
                <p>The best place to watch the game with great food and drinks.</p>
            </div>
        </div>
    </div>
</div>
